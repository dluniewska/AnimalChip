@model IEnumerable<AnimalChip.Models.Animal>

@{
    ViewData["Title"] = "Index";
}


<h1>Animal basic search</h1>

@*@TempData["Message"]*@


<div>
    @if (Model.Count() == 0)
    {
        <p>There is no Animal with given chip: @TempData["Message"].</p>

    }
    else
    {

        <p> The Animal with given chip  @TempData["Message"] has been found. For more infomration such as Name, Kind, Breed etc. please log in. </p>

    }

</div>

<div>
    <a asp-action="Search" class="btn btn-secondary">Back to Search</a>
</div>
